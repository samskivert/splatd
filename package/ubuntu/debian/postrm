#!/bin/sh

set -e

case "$1" in
    purge)
        # Delete configuration file which was generated by the user or postinst.
        rm -rf /etc/splatd
        ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac
#DEBHELPER#
